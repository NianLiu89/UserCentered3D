<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800.0" prefWidth="1500.0" style="-fx-background-color: #f3f3f3;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="experiment.view.InitializationController">
   <top>
      <Label text="Docking Experiment" BorderPane.alignment="CENTER">
         <font>
            <Font name="Impact" size="71.0" />
         </font>
         <padding>
            <Insets top="100.0" />
         </padding>
      </Label>
   </top>
   <center>
      <GridPane alignment="TOP_CENTER" vgap="10.0" BorderPane.alignment="TOP_CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Dominant Hand" GridPane.columnSpan="2">
               <font>
                  <Font name="Impact" size="40.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </Label>
            <RadioButton fx:id="radLeftHand" mnemonicParsing="false" text="Left" GridPane.rowIndex="1">
               <font>
                  <Font name="Impact" size="25.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="radRightHand" mnemonicParsing="false" text="Right" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="Impact" size="25.0" />
               </font>
            </RadioButton>
            <Button fx:id="btnConfirm" graphicTextGap="0.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleConfirm" prefWidth="250.0" text="CONFIRM" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="3">
               <font>
                  <Font name="Impact" size="30.0" />
               </font>
               <GridPane.margin>
                  <Insets top="30.0" />
               </GridPane.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="80.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</BorderPane>
